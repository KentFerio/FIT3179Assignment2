{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 440,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/A2_mean_temperature.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "color": "orange",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {"labelAngle": 0}
        },
        "y": {
          "field": "Temperature",
          "type": "quantitative",
          "title": "Temperature Anomaly (°C)",
          "scale": {"zero": false}
        },
        "tooltip": [
          {"field": "Year"},
          {
            "field": "Temperature",
            "title": "Anomaly (°C)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "grey",
        "strokeDash": [4, 4]
      },
      "encoding": {
        "y": {"datum": 0}
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "orangered",
        "strokeDash": [5, 5],
        "opacity": 0.7
      },
      "transform": [
        {
          "regression": "Temperature",
          "on": "Year"
        }
      ],
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Temperature", "type": "quantitative"}
      }
    }
  ],

  "config": {
    "view": {"stroke": "transparent"},
    "background": "white"
  }
}
