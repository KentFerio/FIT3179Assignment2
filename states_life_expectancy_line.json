{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.2.0.json",
  "width": "container",
  "height": 320,

  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/A2_states_life_expectancy.csv",
    "format": {"type": "csv"}
  },

  "params": [
    {
      "name": "stateSelector",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],

  "transform": [
    {
      "calculate": "stateSelector",
      "as": "SelectedState"
    }
  ],

  "layer": [
    {
      "transform": [
        {"filter": "stateSelector != 'All'"},
        {"filter": "datum.States == stateSelector"},
        {
          "fold": [
            "2011","2012","2013","2014","2015",
            "2016","2017","2018","2019","2020"
          ],
          "as": ["Year","LifeExpectancy"]
        }
      ],
      "mark": {"type": "line", "point": true, "color": "#1f77b4"},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "LifeExpectancy",
          "type": "quantitative",
          "title": "Life Expectancy (years)",
          "scale": {"domain": [76, 86]}
        },
        "tooltip": [
          {"field": "Year"},
          {"field": "LifeExpectancy", "title": "Life Expectancy", "format": ".1f"}
        ]
      }
    },
    {
      "transform": [
        {"filter": "stateSelector == 'All'"},
        {"fold": ["2011","2012","2013","2014","2015","2016","2017","2018","2019","2020"], "as": ["Year","LifeExp"]},
        {
          "aggregate": [
            {"op": "mean", "field": "LifeExp", "as": "AvgLifeExpectancy"}
          ],
          "groupby": ["Year"]
        }
      ],
      "mark": {"type": "line", "point": true, "color": "#2ca02c"},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "AvgLifeExpectancy",
          "type": "quantitative",
          "title": "Life Expectancy (years)",
          "scale": {"domain": [76, 86]}
        },
        "tooltip": [
          {"field": "Year"},
          {"field": "AvgLifeExpectancy", "title": "National Average", "format": ".1f"}
        ]
      }
    }
  ],

  "config": {
    "view": {"stroke": "transparent"},
    "background": "white"
  }
}
