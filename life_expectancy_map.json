{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 445,

  "projection": {"type": "naturalEarth1"},

  "params": [
    {
      "name": "yearSelector",
      "value": "2020",
      "bind": {
        "input": "select",
        "options": ["2011","2012","2013","2014","2015","2016","2017","2018","2019","2020"],
        "name": "Select Year: "
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5, "fill": "#d9d9d9"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "title": "Country"},
          {"title": "Life Expectancy"}
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/A2_countries_life_expectancy.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["2011","2012","2013","2014","2015","2016","2017","2018","2019","2020"]
          }
        },
        {"calculate": "toNumber(datum[yearSelector])", "as": "life_expectancy"},
        {"filter": "isValid(datum.life_expectancy) && datum.life_expectancy != null"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "life_expectancy",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Life Expectancy (years)"
        },
        "tooltip": [
          {"field": "properties.NAME", "title": "Country"},
          {"field": "life_expectancy", "title": "Life Expectancy", "format": ".1f"}
        ]
      }
    },

    {
      "data": {"values": [{"label": "No data"}]},
      "mark": {"type": "rect", "width": 20, "height": 20, "fill": "#d9d9d9"},
      "encoding": {
        "x": {"value": 20},
        "y": {"value": 20}
      }
    },
    {
      "data": {"values": [{"label": "No data"}]},
      "mark": {"type": "text", "align": "left", "baseline": "middle", "dx": 30, "fontSize": 12, "color": "#333"},
      "encoding": {
        "x": {"value": 20},
        "y": {"value": 30},
        "text": {"field": "label"}
      }
    }
  ],

  "config": {
    "view": {"stroke": "transparent"},
    "background": "white"
  }
}
