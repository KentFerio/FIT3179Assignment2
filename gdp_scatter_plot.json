{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 310,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/A2_countries_gdp_per_capita.csv",
    "format": {"type": "csv"}
  },

  "transform": [
    {
      "fold": ["2011","2012","2013","2014","2015","2016","2017","2018","2019","2020"],
      "as": ["year","gdp"]
    },
    {"filter": "datum.year == yearSelector"},
    {
      "lookup": "Country Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/KentFerio/FIT3179Assignment2/refs/heads/main/A2_countries_life_expectancy.csv",
          "format": {"type": "csv"}
        },
        "key": "Country Name",
        "fields": ["2011","2012","2013","2014","2015","2016","2017","2018","2019","2020","Continent"]
      }
    },
    {"calculate": "datum[yearSelector]", "as": "life_expectancy"},
    {"filter": "datum.gdp != null && datum.life_expectancy != null"},
    {"filter": "continentSelector == 'All' || datum.Continent == continentSelector"}
  ],

  "params": [
    {
      "name": "yearSelector",
      "value": "2020",
      "bind": {
        "input": "select",
        "options": ["2011","2012","2013","2014","2015","2016","2017","2018","2019","2020"],
        "name": "Select Year: "
      }
    },
    {
      "name": "continentSelector",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All","Africa","Asia","Europe","North America","South America","Oceania"],
        "name": "Select Continent: "
      }
    }
  ],

  "layer": [
    {
      "mark": {"type": "circle", "opacity": 0.7, "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "x": {
          "field": "gdp",
          "type": "quantitative",
          "title": "GDP per Capita (USD)",
          "scale": {"type": "log", "base": 10},
          "axis": {
            "grid": false,
            "tickCount": 5,
            "values": [100,1000,10000,100000,1000000],
            "labelExpr": "if(datum.value < 1000, format(datum.value, '$,.0f'), format(datum.value/1000, '$,.0f') + 'K')"
          }
        },
        "y": {
          "field": "life_expectancy",
          "type": "quantitative",
          "title": "Life Expectancy (years)",
          "scale": {"domain": [40,90]},
          "axis": {"grid": true, "tickCount": 6}
        },
          "color": {
          "field": "Continent",
          "type": "nominal",
          "title": "Continent",
          "scale": {"scheme": "tableau10"},
          "legend": {
                      "orient": "none",
                      "legendX": 500,
                      "legendY": 0.5
                    }
        },
        "size": {"field": "gdp", "type": "quantitative", "legend": null},
        "tooltip": [
          {"field": "Country Name", "title": "Country"},
          {"field": "Continent"},
          {"field": "gdp", "title": "GDP per Capita","format": "$,.0f"},
          {"field": "life_expectancy", "title": "Life Expectancy (yrs)","format": ".1f"}
        ]
      }
    }
  ],

  "config": {
    "background": "white",
    "view": {"stroke": "transparent"},
    "axis": {"domain": false, "gridColor": "#f0f0f0", "gridOpacity": 0.7}
  }
}
